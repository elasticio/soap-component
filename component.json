{
  "title": "SOAP component",
  "description": "Generic SOAP / WebServices integration component",
  "credentials": {
    "fields": {
      "auth": {
        "required": false,
        "viewClass": "HTTPAuthView"
      }
    }
  },
  "triggers": {
    "callTrigger": {
      "title": "Call",
      "main": "io.elastic.soap.actions.CallAction",
      "fields": {
        "wsdlURI": {
          "label": "WSDL URI",
          "required": true,
          "viewClass": "TextFieldWithNoteView",
          "placeholder": "http://www.webservicex.net/CreditCard.asmx?wsdl",
          "note": "Specify full WSDL URI, it should be accessible from the Internet."
        },
        "binding": {
          "viewClass": "SelectView",
          "label": "Binding",
          "required": true,
          "model": "providers.BindingModelProvider",
          "prompt": "Choose a Binding [Service/Port]"
        },
        "operation": {
          "viewClass": "SelectView",
          "label": "Operation",
          "required": true,
          "model": "providers.OperationModelProvider",
          "prompt": "Choose an Operation [Service/Port]"
        }
      }
    }
  },
  "actions": {
    "callAction": {
      "title": "Call",
      "main": "io.elastic.soap.triggers.CallAction",
      "fields": {
        "wsdlURI": {
          "label": "WSDL URI",
          "required": true,
          "viewClass": "TextFieldWithNoteView",
          "placeholder": "http://www.webservicex.net/CreditCard.asmx?wsdl",
          "note": "Please specify a full URI of your WSDL, it should also be accessible from the internet."
        },
        "binding": {
          "viewClass": "SelectView",
          "label": "Binding",
          "required": true,
          "model": "providers.BindingModelProvider",
          "prompt": "Chose an Binding [Service/Port]"
        },
        "operation": {
          "viewClass": "SelectView",
          "label": "Operation",
          "required": true,
          "model": "providers.OperationModelProvider",
          "prompt": "Chose an Operation [Service/Port]"
        }
      }
    }
  }
}

